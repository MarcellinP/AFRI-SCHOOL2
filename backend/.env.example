# ==================== SERVER ====================
PORT=5000
NODE_ENV=development

# ==================== DATABASE ====================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/afri-school
# Alternative for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/afri-school

# ==================== CACHE ====================
# Redis connection URL
REDIS_URL=redis://localhost:6379
# Alternative for Redis Cloud:
# REDIS_URL=redis://username:password@hostname:port

# ==================== AUTHENTICATION ====================
# JWT configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_chars_recommended
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_chars
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# ==================== PAYMENT (STRIPE) ====================
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==================== FRONTEND ====================
# CORS origin
FRONTEND_URL=http://localhost:3000

# ==================== LOGGING ====================
# Log levels: error, warn, info, debug, verbose, silly
LOG_LEVEL=info

